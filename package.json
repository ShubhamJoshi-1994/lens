  "auto": {
    "baseBranch": "main",
    "plugins": [
      "npm",
      "all-contributors",
      "conventional-commits",
      "released"
    ],
    "prereleaseBranches": [
      "alpha",
      "beta",
      "next"
    ]
  },
  "overrides": {
    "vite": {
      "rollup": "npm:@rollup/wasm-node"
